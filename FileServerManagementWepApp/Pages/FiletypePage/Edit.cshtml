@page
@model FileServerManagementWepApp.Pages.FiletypePage.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>ویرایش نوع فایل</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TblFileType.Id" />
            <div class="form-group">
                <div class="alert alert-info">
                    فرمت فایل را به صورت تکی و بدون نقطه وارد کنید
                </div>
                <label asp-for="TblFileType.Title" class="control-label">نوع فایل</label>
                <input asp-for="TblFileType.Title" class="form-control" />
                <span asp-validation-for="TblFileType.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ذخیره" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">بازگشت</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
